{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/*"],
      "*": ["./src/@types/*"]
    },
    "types": [
      "@nuxt/types",
      "@nuxtjs/axios",
      "nuxt-i18n",
      "@types/node",
      "amazon-cognito-identity-js",
      "@nuxt/image"
    ]
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
